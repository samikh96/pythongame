import random
answer = random.randint(0,10)
user_input = []


#save guess on array
numberguessed = -1
while numberguessed != answer:
    numberguessed = int(input("Please enter your guess: "))
    user_input.append(numberguessed)
    if numberguessed < answer:
        print("haha!Your guess is too low")
    elif numberguessed > answer:
        print("shame!Your guess is too high")
    else:
        print("well done you not a complete failure!")
        print(user_input)
        break
